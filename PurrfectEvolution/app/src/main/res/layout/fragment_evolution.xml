<?xml version="1.0" encoding="utf-8"?>
<!--layout editori ein toimi jos käytössä on jokin muu kuin relativelayout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:columnCount="10"
    app:rowCount="30"
    android:background="@drawable/kissatausta1"
    android:id="@+id/fragment_evolution">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:onClick="onEvolutionCatClick" />

    <ImageButton
        android:id="@+id/gieffMoney"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="moneyButtonOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/koliggo1"
        android:background="@null"/>

    <ImageView
        android:id="@+id/imageView_hanta"
        android:layout_width="329dp"
        android:layout_height="400dp"
        android:layout_alignStart="@+id/imageViewKroppa"
        android:layout_alignTop="@+id/imageViewKroppa"
        android:foreground="@drawable/porrokissa_hanta" />

    <ImageView
        android:id="@+id/imageViewKroppa"
        android:layout_width="329dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:foreground="@drawable/porrokissa_kroppa"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imageViewPaa"
        android:layout_width="329dp"
        android:layout_height="400dp"
        android:layout_alignStart="@+id/imageViewKroppa"
        android:layout_alignTop="@+id/imageViewKroppa"
        android:foreground="@drawable/porrokissa_paa"
        android:scaleType="fitXY" />

</RelativeLayout>



