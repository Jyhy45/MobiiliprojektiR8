<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:background="@drawable/rakennus_tausta"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <ImageButton
            android:id="@+id/body1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/kissa_vartalo"
            android:background="@null" />

        <ImageButton
            android:id="@+id/body2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/kissa_vartalo2"
            android:background="@null" />

        <ImageButton
            android:id="@+id/body3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/kissa_vartalo3"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageButton
            android:id="@+id/body4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/nokikissa_kroppa"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/body5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/taikakissa_kroppa"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/body6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/porrokissa_kroppa"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <ImageButton
            android:id="@+id/body7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/kissakala_kroppa"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/body8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/porrokissa_kroppa"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/body9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:onClick="onBodyMenuClick"
            app:srcCompat="@drawable/kissa_vartalo"
            android:background="@null"/>
    </LinearLayout>

</LinearLayout>