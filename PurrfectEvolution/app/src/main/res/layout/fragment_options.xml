<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="purrfect.evolution.OptionsFragment"
    android:visibility="visible"
    android:background="@drawable/optionikkuna"
    android:id="@+id/options_fragment"
    >

    <!--<com.facebook.share.widget.ShareButton
        android:id="@+id/fb_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Reset"
        android:layout_alignStart="@+id/Reset" />-->
    <Button
        android:id="@+id/moneyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:onClick="moneyButtonOnClick"
        android:text="Anna Rahea" />


    <ImageButton
        android:id="@+id/Reset"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:onClick="bananaReset"
        app:srcCompat="@drawable/reset"
        android:background="@null"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/On2" />

    <ImageButton
        android:id="@+id/On1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/moneyButton"
        android:layout_below="@+id/moneyButton"
        android:layout_marginEnd="87dp"
        android:layout_marginTop="150dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="options_Onclick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/on_vihr" />

    <ImageButton
        android:id="@+id/Off1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/moneyButton"
        android:layout_below="@+id/moneyButton"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="150dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="options_Onclick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/off_harm" />

    <ImageButton
        android:id="@+id/On2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/moneyButton"
        android:layout_below="@+id/moneyButton"
        android:layout_marginEnd="87dp"
        android:layout_marginTop="200dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="options_Onclick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/on_harm" />

    <ImageButton
        android:id="@+id/Off2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/moneyButton"
        android:layout_below="@+id/moneyButton"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="200dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="options_Onclick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/off_pun" />
</RelativeLayout>



